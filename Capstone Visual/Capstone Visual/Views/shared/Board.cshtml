@using BootstrapSupport
@model Capstone_Visual.Models.Board

@{
    ViewBag.Title = "Board";
    Capstone_Visual.Models.Board b = new Capstone_Visual.Models.Board(); //instantiate board - eventually add parameter to determine load board or start new
    {
        <html>
        <head>
            <title>Game</title>
            <script src="~/scripts/TileMappings.js" type="text/javascript"></script>

        </head>
        <body>
            <h1>Test</h1>
            <div id="boardDiv">
                <table>
                    @for (int i = 0; i < 8; i++)
                    {
                        <tr>
                            @for (int j = 0; j < 8; j++)
                            {
                                <td>
                                    @{
                                      string id = i.ToString() + "." + j.ToString();
                                    }
                                    <img id=@(id) data-owner="EMPTY" data-letter=@(b.tArray[i, j].getValue()) class="img-responsive" src="@(b.tArray[i, j].getLink())" onclick="clicked(@(id))" />
                                </td>
                            }
                        </tr>
                    }
                </table>
            </div>
        </body>
    </html>
    }

}
