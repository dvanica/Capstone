@using BootstrapSupport
@model Capstone_Visual.Models.Tile

@{
    ViewBag.Title = "Board";
    Capstone_Visual.Models.TileArray testArray = new Capstone_Visual.Models.TileArray();
    Random rand = new Random();
    {
        <html>
        <head>
            <title>Game</title>
            <script src="~/scripts/TileMappings.js" type="text/javascript"></script>

        </head>
        <body>
            <h1>Test</h1>
            <div id="boardDiv">
                <table>
                    @for (int i = 1; i < 9; i++)
                    {
                        <tr>
                            @for (int j = 1; j < 9; j++)
                            {
                                <td>
                                    @{string id = i.ToString() + "." + j.ToString();
                                    int num = rand.Next(0, 26);
                                    char value = (Char)('A' + num);}
                                    <img id=@(id) data-owner="EMPTY" data-letter=@(value) class="img-responsive" src="http://i.imgur.com/bbaSk8D.png" onclick="clicked(@(id))" />
                                </td>
                            }
                        </tr>
                    }
                </table>
            </div>
        </body>
    </html>
    }

}
